<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .logo-container {
        text-align: center; /* Center the logo horizontally */
        position: absolute;
        bottom: 150px; /* Adjust this value to move the logo closer to the bottom */
        left: 50%;
        transform: translateX(-50%);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <% if (messages.error) { %>
          <div class="alert alert-danger"><%= messages.error %></div>
          <% } %>
          <h2 class="text-center">Reset Password</h2>
          <form
            action="/api/signup/resetPassword/<%= id%>/<%=token%>"
            method="POST"
          >
            <input
              type="hidden"
              class="form-control"
              name="id"
              value="<%= id%>"
            />
            <input
              type="hidden"
              class="form-control"
              name="token"
              value="<%= token %>"
            />

            <div class="form-group">
              <label for="password">Enter New Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              />
            </div>
            <div class="form-group">
              <label for="confirmPassword">Confirm Password</label>
              <input
                type="password"
                class="form-control"
                id="confirmPassword"
                name="confirmPassword"
                required
              />
            </div>
            <div class="form-group mt-3">
              <button type="submit" class="btn btn-primary btn-block">
                Reset Password
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="logo-container">
      <img src="/logos/images.png" alt="logo" class="img-fluid" />
    </div>
    <script>
      window.addEventListener("pageshow", function (event) {
        if (event.persisted) {
          window.location.href = "/invalid-link";
        }
      });
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-rfg/7jIOM5t8lX1arvO0t5fKc6VVLS9CRqfCbnC7ELnA8Utm8U6w3E2Q+pGmFTw5"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-p4Gbxypg2++nI5yGoOZMLfg5qv6E/BdS8Wh+l0ZlfNABN3JZ8t7JFAkPFSzQKekX"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
